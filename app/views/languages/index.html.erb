<%= form_tag :controller => "languages", :action => "select", :method => 'post' do %>

  <div id="wrapper">
   <!-- Page Content -->
        <div id="page-content-wrapper" class="text-center">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 jumbotron">
                        <h1>Welcome!</h1>
                        <h4>To begin your learning journey, please select a language</h4>
                          <div class="field">
                            <!-- <label for="select">Language</label> -->
                            <label>Language</label>
                            <%= collection_select :language, :Langopt_id, Langopt.all, :id, :name %>
                          </div>
                         
                          <div class="action">
                            <%= submit_tag "Search", :class => "btn btn-primary" %>
                          </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
   </div>
<% end %>



